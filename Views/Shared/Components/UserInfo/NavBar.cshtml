@using SubjectRegister.Common;
@model UserInfo

<a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
    <div class="nav-profile-img">
        <img class="img-avatar-fomat" src="@Model.ImagePath" alt="image">
        <span class="availability-status online"></span>
    </div>
    <div class="nav-profile-text">
        <p class="mb-1 text-black">@Model.Fullname</p>
    </div>
</a>
<div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
    <a class="dropdown-item item-hidden" href="@Url.Action("Profile", "Login")">
        <i class="mdi mdi-account-card-details mr-3 text-info"></i> Thông tin cá nhân
    </a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item item-hidden" data-toggle="modal" data-target="#edit-password">
        <i class="mdi mdi-selection mr-3 text-success"></i> Đổi mật khẩu
    </a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item item-hidden" href="@Url.Action("Logout", "Login")">
        <i class="mdi mdi-logout mr-3 text-danger"></i> Đăng xuất
    </a>
</div>