@model List<SemesterModel>

<div class="card">
    <div class="table-responsive table-scroll">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên học kỳ</th>
                    <th>Thời gian bắt đầu</th>
                    <th>Thời gian kết thúc</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="detail">
                        <td class="edit-column">@item.SemesterName</td>
                        <td class="edit-column">@item.StartTime.ToShortDateString()</td>
                        <td class="edit-column">@item.EndTime.ToShortDateString()</td>
                        <td class="edit-column">@item.strStatusActive</td>
                        <td>
                            <a class="nav-link p-0" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                                <i class="mdi mdi-dots-vertical mdi-24px"></i> <!-- Icon ba chấm dọc -->
                            </a>
                            <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                                <a class="dropdown-item item-hidden updateStatus" data-code="@item.SemesterCode" data-status="@item.StatusActive" href="">
                                    <i class="mdi mdi-account-card-details mr-3 text-info"></i>@(item.StatusActive ? "Tắt hoạt động" : "Mở hoạt động")
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item item-hidden" href="@Url.Action("Update", "Semester", new {code = item.SemesterCode})">
                                    <i class="mdi mdi-account-card-details mr-3 text-info"></i> Sửa
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item item-hidden showModalDeleteConfirm" href="#" data-code="@item.SemesterCode">
                                    <i class="mdi mdi-logout mr-3 text-danger"></i> Xóa
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>