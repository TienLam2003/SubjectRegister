@{
    ViewBag.Title = "Trang chủ";
    ViewBag.Active = "Home";
}

<style>
    .equal-height {
        display: flex;
        align-items: stretch;
    }
    .equal-height img {
        object-fit: cover; /* Đảm bảo ảnh không bị méo */
        height: 100%; /* Đặt chiều cao đầy đủ */
    }
</style>


<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-home"></i>
        </span> Chào mừng bạn đã đến với Website đăng ký môn học theo hệ thống tín chỉ Trường Đại học Bạc Liêu
    </h3>
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
            </li>
        </ul>
    </nav>
</div>
<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
                <img src="~/images/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Số lượng sinh viên đang theo học <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.TotalStudent</h2>
                <h6 class="card-text">@* Increased by 60% *@</h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="~/images/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Số lượng giảng viên giảng dạy <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.TotalTeacher</h2>
                <h6 class="card-text"></h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                <img src="~/images/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Số lượng phòng học <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.TotalClassroom</h2>
                <h6 class="card-text"></h6>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hoạt động gần đây</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                        <i class="mdi mdi-account-outline icon-sm mr-2"></i>
                        <span>Chúc mừng một số sinh viên có thành tích cao trong học tập</span>
                    </div>
                    <div class="d-flex align-items-center text-muted font-weight-light">
                        <i class="mdi mdi-clock icon-sm mr-2"></i>
                        <span>October 3rd, 2024</span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6 pr-1">
                        <img src="/images/blu6.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                    </div>
                    <div class="col-6 pl-1">
                        <img src="/images/blu7.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Trường Đại học Bạc Liêu nâng cao hiệu quả hợp tác</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center text-muted font-weight-light">
                        <i class="mdi mdi-clock icon-sm mr-2"></i>
                        <span>October 3rd, 2024</span>
                    </div>
                </div>
                <div class="row mt-3 equal-height">
                    <div class="col-6 pr-1">
                        <img src="/images/blu8.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                    </div>
                    <div class="col-6 pl-1">
                        <img src="/images/blu9.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>