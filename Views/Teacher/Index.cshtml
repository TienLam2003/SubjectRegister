            </div>
            <button class="btn btn-gradient-info btn-rounded btn-icon mt-2 ml-2" id="search"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
        <a href="@Url.Action("Add", "Teacher")" class="btn btn-info p-3 my-2 mr-3">Thêm</a>
